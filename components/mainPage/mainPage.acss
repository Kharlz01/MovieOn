.welcome {
  margin-top: 10px;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #5b5b5b;
  padding: 30px;
  height: 60%;
  color: white;
  border-radius: 10px;
}

.welcome-title {
  font-size: 20px;
  font-weight: bold;
}

.subtitle {
  font-size: 18px;
  margin-top: 10px;
}

.description {
  margin-top: 15px;
  font-size: 14px;
  line-height: 1.5;
}